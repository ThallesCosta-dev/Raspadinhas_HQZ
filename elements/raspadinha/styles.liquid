{% raw %}
<style>
    body {
        background-color: #ffffff;
        font-family: "Neometric-ExtraBold", sans-serif;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .container {
        width: 100%;
        max-width: 800px;
        padding: 20px;
        margin: 0 auto;
        user-select: none;
        -webkit-user-select: none;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 20px;
    }

    .main-container {
        display: flex;
        width: 100%;
        max-width: 800px;
        height: auto;
        flex-direction: column;
        background: #ffffff;
        gap: 0;
    }

    @media (min-width: 768px) {
        .main-container {
            flex-direction: row;
            height: 400px;
            gap: 0;
        }
    }

    .text-side {
        width: 100%;
        height: auto;
        min-height: 300px;
        padding: 0;
        background-color: #EDEFF0;
        position: relative;
        display: flex;
        flex-direction: column;
        align-items: center;
        border-radius: 20px 20px 0 0;
    }

    .logo-container {
        width: 100%;
        display: flex;
        justify-content: center;
        margin-top: 20px;
        margin-bottom: 20px;
    }

    .logo {
        width: 50px;
        pointer-events: none;
        -webkit-user-drag: none;
    }

    .text-content {
        font-family: "Neometric-ExtraBold", sans-serif;
        font-size: 36px;
        line-height: 1;
        letter-spacing: -0.02em;
        pointer-events: none;
        padding-left: 20px;
        text-align: left;
        width: 80%;
        max-width: 250px;
        margin-top: 10px;
    }

    .text-content div {
        margin-bottom: 5px;
    }

    .text-content .pink {
        color: #D61682;
    }

    .boa-sorte {
        position: absolute;
        bottom: 20px;
        width: 100%;
        color: #D61682;
        font-family: "Neometric-ExtraBold", sans-serif;
        font-size: 24px;
        pointer-events: none;
        text-align: center;
        left: 0;
    }

    .scratch-side {
        width: 100%;
        aspect-ratio: 1;
        max-width: 400px;
        height: auto;
        margin: 0 auto;
        background-color: #D61682;
        position: relative;
        overflow: hidden;
        border-radius: 0 0 20px 20px;
    }

    .prize-container {
        position: absolute;
        width: 100%;
        height: 100%;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: #D9DBDC;
        border-radius: 20px;
    }

    .prize-container img {
        max-width: 75%;
        max-height: 75%;
        object-fit: contain;
        pointer-events: none;
    }

    #scratchCard {
        position: absolute;
        top: 0;
        left: 0;
        cursor: pointer;
        border-radius: 20px;
        width: 100%;
        height: 100%;
        touch-action: none;
    }

    .text-side::after {
        content: '';
        position: absolute;
        right: -20px;
        top: 50%;
        transform: translateY(-50%);
        width: 40px;
        height: 80px;
        background-color: #EDEFF0;
        clip-path: polygon(0 0, 100% 50%, 0 100%);
        z-index: 1;
        display: none;
    }

    @media (min-width: 768px) {
        .text-side, .scratch-side {
            width: 400px;
            height: 400px;
            box-sizing: border-box;
        }
        
        .text-side::after {
            display: block;
        }

        .text-content {
            font-size: 48px;
            padding-left: 40px;
            max-width: 300px;
            margin-top: 20px;
        }

        .boa-sorte {
            font-size: 28px;
        }

        .logo {
            width: 60px;
        }

        .text-side {
            border-radius: 20px;
        }

        .scratch-side {
            border-radius: 20px;
        }
    }

    .winner-message {
        width: 100%;
        max-width: 800px;
        padding: 20px;
        margin: 0 10px;
        background-color: #EDEFF0;
        border-radius: 20px;
        text-align: center;
        display: none;
        font-family: "Neometric-ExtraBold", sans-serif;
    }

    .winner-message h2 {
        color: #D61682;
        font-size: 24px;
        margin-bottom: 10px;
    }

    .winner-message p {
        font-size: 20px;
        color: #333;
    }

    @media (min-width: 768px) {
        .winner-message h2 {
            font-size: 28px;
        }

        .winner-message p {
            font-size: 24px;
        }
    }
</style>
{% endraw %} 